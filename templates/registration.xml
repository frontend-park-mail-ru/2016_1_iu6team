<fest:template xmlns:fest="http://fest.mail.ru">
	<div id="login">
		<div class="header">
			<h1 class="header__h1 header__h1_50">
				Registration
	    	</h1>
		</div>

		<div class="content">
			<form method="" class="content__form-login form-horizontal">
				<div class="form-group form-group-lg">
					<div class="col-md-3">
						<label for="login" class="control-label content__label">Login</label>
					</div>
					<div class="col-md-9">
						<input type="text" name="login" class="form-control _no-border _bold" placeholder="login" />
					</div>
				</div>

				<div class="form-group form-group-lg">
					<div class="col-md-3">
						<label for="password" class="control-label content__label">Password</label>
					</div>
					<div class="col-md-9">
						<input type="password" class="form-control _no-border _bold" name="password" placeholder="password" />
					</div>
				</div>

				<div class="form-group form-group-lg">
					<div class="col-md-3">
						<label for="Email" class="control-label content__label">Email</label>
					</div>
					<div class="col-md-9">
						<input type="email" class="form-control _no-border _bold" name="Email" placeholder="Email" />
					</div>
				</div>

				<button class="btn btn-primary btn-lg content__btn _no-border" type="submit">Register</button>
			</form>
		</div>

		<div class="footer">
			<h3>
				<a href="#main" class="footer__a">
					<span class="glyphicon glyphicon-chevron-left"></span>
					MAIN MENU
				</a>
	    	</h3>
		</div>
	</div>
